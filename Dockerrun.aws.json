{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "client",
            "image": "numery/multi-client",
            "hostname" : "client",
            "essential": false            
        },
        {
            "name": "server",
            "image": "numery/multi-server",
            "hostname" : "api",
            "essential": false            
        },
        {
            "name": "worker",
            "image": "numery/multi-worker",
            "hostname" : "worker",
            "essential": false            
        },
        {
            "name": "nginx",
            "image": "numery/multi-nginx",
            "hostname" : "nginx",
            "essential": true,   
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"]         
        }
    ]
}